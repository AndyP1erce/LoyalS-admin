@page
@model LoyalSRazor.Pages.CheckInPage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CheckIn</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CheckIn.UserId" class="control-label"></label>
                <select asp-for="CheckIn.UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CheckIn.PlaceId" class="control-label"></label>
                <select asp-for="CheckIn.PlaceId" class ="form-control" asp-items="ViewBag.PlaceId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CheckIn.date_of_check" class="control-label"></label>
                <input asp-for="CheckIn.date_of_check" class="form-control" />
                <span asp-validation-for="CheckIn.date_of_check" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckIn.coins" class="control-label"></label>
                <input asp-for="CheckIn.coins" class="form-control" />
                <span asp-validation-for="CheckIn.coins" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
